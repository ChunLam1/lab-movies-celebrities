<h1>NEW MOVIES</h1>
<form action="/movie/create" method="post">
    <label for="title" class="label">Title</label>
    <input class="input" type="text" id="title" name="title" value="">

    <label for="genre" class="label">Genre</label>
    <input class="input" type="text" id="genre" name="genre" value="">


    <label for="plot" class="label">Plot</label>
    <input class="input" type="text" id="plot" name="plot" value="">

    <label for="cast">Cast</label>
    <select multiple name="cast" id="cast">

        {{#each celebrity}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

<button>Submit</button>


</form>
